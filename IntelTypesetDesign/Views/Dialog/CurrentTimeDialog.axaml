<Window
    x:Class="IntelTypesetDesign.Views.Dialog.CurrentTimeDialog"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vme="clr-namespace:IntelTypesetDesign.ViewModels.Dialog"
    Title="CurrentTimeDialog"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vme:CurrentTimeDialogViewModel"
    mc:Ignorable="d">

    <TextBlock
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Text="{Binding CurrentTime, StringFormat=Current time is {0:HH:mm:ss}}" />
</Window>
